<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00a6fb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="158dp"
        android:background="#b8b8ff"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/previousOperand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/currentOperand"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:padding="16dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayoutgrid"
        android:layout_width="411dp"
        android:layout_height="580dp"
        android:orientation="vertical"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:columnCount="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="5">

            <Button
                android:id="@+id/AC"
                android:layout_width="17dp"
                android:layout_height="27dp"
                android:layout_margin="5dp"
                android:width="10dp"
                app:backgroundTint="@color/teal"
                android:textColor="@color/black"
                android:insetLeft="3dp"
                android:insetRight="3dp"
                android:text="AC"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                app:cornerRadius="50dp"
                app:iconPadding="0dp"
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"/>


            <Button
                android:id="@+id/delete"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:text="C"
                app:backgroundTint="@color/teal"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"/>


            <Button
                android:id="@+id/division"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:shadowRadius="30"
                android:text="รท"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/blue_100"
                app:cornerRadius="50dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#1A659E"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#BFDBF7"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#BFDBF7"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="50dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#BFDBF7"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/multiplication"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                app:backgroundTint="@color/blue_100"
                android:textColor="@color/black"
                android:text="ร"
                android:textSize="24sp"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#1A659E"
                app:strokeWidth="1dp"/>

            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#BFDBF7"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#BFDBF7"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#BFDBF7"
                app:strokeWidth="3dp" />


            <Button
                android:id="@+id/minus"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                app:backgroundTint="@color/blue_100"
                android:textColor="@color/black"
                android:text="&#8722;"
                android:textSize="24sp"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#1A659E"
                app:strokeWidth="1dp"/>


            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#BFDBF7"
                app:strokeWidth="3dp" />


            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#BFDBF7"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#BFDBF7"
                app:strokeWidth="3dp" />


            <Button
                android:id="@+id/addition"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                app:backgroundTint="@color/blue_100"
                android:textColor="@color/black"
                android:text="+"
                android:textSize="24sp"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#1A659E"
                app:strokeWidth="1dp"/>


            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#BFDBF7"
                app:strokeWidth="3dp" />


            <Button
                android:id="@+id/number"
                android:layout_width="21dp"
                android:layout_height="29dp"
                android:layout_margin="5dp"
                android:onClick="appendNumber"
                android:text="&#183;"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/ash"
                app:cornerRadius="60dp"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:strokeColor="#1A659E"
                app:strokeWidth="1dp" />


            <Button
                android:id="@+id/equals"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                app:backgroundTint="@color/blue_100"
                android:textColor="@color/black"
                android:text="="
                android:textSize="35dp"
                app:cornerRadius="40dp"
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1" />


        </androidx.gridlayout.widget.GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
